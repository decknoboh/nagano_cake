<div class="container">
  <div class="row mt-3">
    <div class="text-danger">
      <%= flash[:alert] %>
    </div>
  </div>
  <div class="row mt-5">
    <h2>新規会員登録</h2>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-lg-10 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tr>
            <td>名前</td>
            <td>
              <%= f.label :last_name, "(姓)" %>
              <%= f.text_field :last_name, autofocus: true %>
            </td>
            <td>
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana %>
            </td>
            <td>
              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <h2>既に登録済みの方</h2>
  </div>
  <div class="row mt-3">
    <%= render "public/shared/links" %>
  </div>
</div>
