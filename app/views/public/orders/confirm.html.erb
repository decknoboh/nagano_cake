<div class="container">
  <div class="row mt-3">
    <h2>注文情報確認</h2>
  </div>
  <div class="row mt-3">
    <div class="col-lg-8">
      <table class="table table-hover table-bordered">
        <thead class="table-active">
          <th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image(70,50) %> <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <% @total_payment += cart_item.subtotal %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4">
      <table class="table table-hover table-bordered">
        <tr>
          <td class="table-active"><strong>送料</strong></td>
          <td><%= @order.shipping_cost %></td>
        </tr>
          <td class="table-active"><strong>商品合計</strong></td>
          <td><%= @total_payment.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table-active"><strong>請求金額</strong></td>
          <% @total_payment_plus = @total_payment + @order.shipping_cost %>
          <td><%= @total_payment_plus.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <tr>
          <td><strong>支払方法</strong></td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td><strong>お届け先</strong></td>
          <td>〒<%= @order.postal_code %>  <%= @order.address %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= @order.name %></td>
        </tr>
      </table>
    </div>
    <div class="col-lg-4"></div>
  </div>

<%= form_with model: @order_new, url: orders_path do |f| %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :shipping_cost, :value => 800 %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :total_payment, :value => @total_payment + 800 %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :status, :value => "wait_payment" %>
  <div class="row col-sm-3 mt-3 mx-auto">
    <%= f.submit "注文を確定する", class: "btn btn-lg btn-success" %>
  </div>
<% end %>
</div>
