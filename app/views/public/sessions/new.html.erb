<div class="container">
  <div class="row mt-5">
    <h2>ログイン</h2>
  </div>
  <div class="row mt-3">
    <h3>会員の方はこちらからログイン</h3>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3"></div>
      <div class="col-lg-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td>
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              <% end %>
            </td>
          </tr>
        </table>
        <div class="row mt-3 col-sm-3 mx-auto">
          <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <h3>会員登録がお済みでない方</h3>
  </div>
  <div class="row mt-3">
    <%= render "public/shared/links" %>
  </div>
</div>