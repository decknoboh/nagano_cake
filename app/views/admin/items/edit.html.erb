<div class="container">
  <div class="row mt-5">
    <h2>商品編集</h2>
  </div>
  <div class="row mt-3">
    <div class="col-lg-8">
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><label for="item_image">商品画像</label></td>
          <td><%= f.file_field :image, id:"item_image", accept: "image/*" %></td>
        </tr>
        <tr>
          <td><label for="item_name">商品名</label></td>
          <td><%= f.text_field :name, id:"item_name" %></td>
        </tr>
        <tr>
          <td><label for="item_introduction">商品説明</label></td>
          <td><%= f.text_area :introduction, id:"item_introduction" %></td>
        </tr>
        <tr>
          <td><label>ジャンル</label></td>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <td><label for "item_price">税抜価格</label></td>
          <td><%= f.text_field :price, id:"item_price" %></td>
        </tr>
        <tr>
          <td><label>販売ステータス</label></td>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active_true, "販売中" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active_false, "販売停止中" %>
          </td>
        </tr>
      </table>
      <div class="row mt-3">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>
