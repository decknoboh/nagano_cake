<div class="container">
  <div class="row mt-3">
    <div class="col-lg-11">
      <h2>商品一覧</h2>
    </div>
    <div class="col-lg-1">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-3x" style="color: gainsboro;"></i>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th><th>商品名</th><th>税抜価格</th><th>ジャンル</th><th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id), class: "text-dark" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
          <% if item.is_active %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row mt-3">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <%= paginate @items %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>
