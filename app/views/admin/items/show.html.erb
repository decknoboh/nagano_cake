<div class="container">
  <div class="row mt-5">
    <h2>商品詳細</h2>
  </div>
  <div class="row mt-3">
    <div class="col-lg-4 mt-5">
      <%= image_tag @item.get_image(300,200) %>
    </div>
    <div class="col-lg-8 mt-5">
      <table class="table table-borderless">
        <tr>
          <td scope="col" style="width: 30%"><strong>商品名</strong></td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td scope="col" style="width: 30%"><strong>商品説明</strong></td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td scope="col" style="width: 30%"><strong>ジャンル</strong></td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td scope="col" style="width: 30%"><strong>税込価格(税抜価格)</strong></td>
          <td>¥<%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)</td>
        </tr>
        <tr>
          <td scope="col" style="width: 30%"><strong>販売ステータス</strong></td>
          <% if @item.is_active %>
            <td class="text-success"><strong>販売中</strong></td>
          <% else %>
            <td class="text-secondary"><strong>販売停止中</strong></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3 text-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>
